{
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "name": "finances",
    "sourceRoot": "libs/finances/src",
    "root": "libs/finances",
    "projectType": "library",
    "targets": {
        "lint": {
            "executor": "@nx/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["libs/finances/src/**/*.ts"],
                "eslintConfig": "libs/finances/.eslintrc.json",
                "fix": true
            }
        },
        "build": {
            "executor": "@nx/js:tsc",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/libs/finances",
                "main": "libs/finances/src/index.ts",
                "tsConfig": "libs/finances/tsconfig.lib.json",
                "assets": ["libs/finances/*.md"]
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/finances"],
            "options": {
                "jestConfig": "libs/finances/jest.config.ts",
                "coverage": true,
                "coverageDirectory": "coverage/finances",
                "coverageReporters": ["lcov", "json", "html"]
            },
            "configurations": {
                "ci": {
                    "ci": true,
                    "codeCoverage": true
                }
            }
        }
    }
}
