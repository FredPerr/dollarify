{
    "compilerOptions": {
        "incremental": true,
        "target": "esnext",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "declaration": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "rootDir": ".",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "lib": ["esnext"],
        "outDir": "./build"
    },
    "exclude": ["node_modules"],
    "references": [
        {
            "path": "./libs/finances"
        }
    ]
}
